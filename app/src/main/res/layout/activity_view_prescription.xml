<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPrescription"
    android:background="@color/colorGreyBg"
    android:padding="20dp">

    <com.github.piasy.biv.view.BigImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_prescription_image_view_prescription"
        android:layout_above="@id/view_prescription_layout_buttons"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:id="@+id/view_prescription_layout_buttons">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorRed"
            android:text="Reject"
            android:onClick="rejectBtn"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Accept"
            android:onClick="acceptBtn"/>

    </LinearLayout>

</RelativeLayout>