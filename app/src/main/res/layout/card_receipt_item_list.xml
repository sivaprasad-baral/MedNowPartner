<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGreyBg"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:fontFamily="@font/alloy_bold"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/confirm_receipt_text_view_med_price"
                android:id="@+id/confirm_receipt_text_view_med_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:fontFamily="@font/alloy_bold"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/confirm_receipt_image_close_btn"
                android:id="@+id/confirm_receipt_text_view_med_price"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/confirm_receipt_image_close_btn"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>